{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@root/*": [
        "*"
      ],
      "@core/*": [
        "src/core/*"
      ],
      "@control/*": [
        "src/controllers/*"
      ],
      "@service/*": [
        "src/services/*"
      ],
      "@model/*": [
        "src/models/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}