{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@root/*": [
                "*"
            ],
            "@core/*": [
                "src/core/*"
            ],
            "@control/*": [
                "src/controllers/*"
            ],
            "@service/*": [
                "src/services/*"
            ],
            "@models/*": [
                "src/models/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "bin",
        "data"
    ]
}