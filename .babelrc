{
    "presets": [
        "@babel/preset-env"
    ],
    "plugins": [
        [
            "@babel/plugin-proposal-class-properties"
        ],
        [
            "@babel/transform-runtime"
        ],
        [
            "module-resolver",
            {
                "alias": {
                    "@root": [
                        "./",
                        "./"
                    ],
                    "@core": [
                        "./src/core",
                        "./bin/core"
                    ],
                    "@config": [
                        "./src/config",
                        "./bin/config"
                    ],
                    "@control": [
                        "./src/controllers",
                        "./bin/controllers"
                    ]
                }
            }
        ]
    ],
    "env": {
        "production": {
            "presets": [
                "minify"
            ]
        }
    }
}